{
  "name": "@julr/unocss-preset-heropatterns",
  "version": "0.0.2",
  "packageManager": "pnpm@7.9.5",
  "description": "ðŸ UnoCSS preset that integrates Hero Patterns.",
  "keywords": [
    "unocss",
    "unocss-preset",
    "hero patterns"
  ],
  "engines": {
    "node": ">=16"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/Julien-R44/unocss-preset-heropatterns#readme",
  "bugs": {
    "url": "https://github.com/Julien-R44/unocss-preset-heropatterns/issues"
  },
  "license": "MIT",
  "author": "Julien Ripouteau <julien@ripouteau.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Julien-R44/unocss-preset-heropatterns.git"
  },
  "funding": "https://github.com/sponsors/Julien-R44",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && unbuild",
    "dev": "unbuild --stub",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "prepublishOnly": "nr build",
    "release": "bumpp --commit --push --tag && pnpm publish",
    "start": "node --loader=ts-node/esm src/index.ts",
    "test": "node --loader=ts-node/esm bin/test.ts",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "unocss": ">= 0.31.13 < 1"
  },
  "dependencies": {
    "@unocss/preset-mini": "^0.47.6",
    "unocss": "^0.47.6"
  },
  "devDependencies": {
    "@antfu/ni": "^0.18.8",
    "@japa/assert": "^1.3.6",
    "@japa/runner": "^2.2.2",
    "@japa/spec-reporter": "^1.3.2",
    "@julr/eslint-config": "^0.3.2",
    "@types/node": "^18.11.15",
    "bumpp": "^8.2.1",
    "eslint": "^8.29.0",
    "pnpm": "^7.18.2",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "unbuild": "^1.0.2"
  },
  "eslintConfig": {
    "extends": "@julr",
    "rules": {
      "n/no-unsupported-features/es-syntax": "off",
      "n/no-missing-import": "off"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "openapi-types",
        "vite",
        "@babel/core"
      ]
    }
  }
}
